<body>

<h1>ü§ñ Robot Control Panel</h1>

<div>
    <button onclick="send('F')">‚Üë Forward</button><br>
    <button onclick="send('L')">‚Üê Left</button>
    <button onclick="send('S')">‚èπ Stop</button>
    <button onclick="send('R')">‚Üí Right</button><br>
    <button onclick="send('B')">‚Üì Backward</button><br><br>

    <label>Speed:
        <input type="range" id="speed" min="0" max="255" value="150" onchange="updateSpeed(this.value)">
        <span id="speedValue">150</span>
    </label>
</div>

<div class="camera-row">
    <div class="camera-feed">
        <h3>üî¥ Front Camera</h3>
        <img src="{{ url_for('video_feed_front') }}">
    </div>
    <div class="camera-feed">
        <h3>üîµ Rear Camera</h3>
        <img src="{{ url_for('video_feed_rear') }}">
    </div>
</div>

<script>
let speed = 150;
document.addEventListener('keydown', e => {
    if (e.key === "ArrowUp") send("F");
    else if (e.key === "ArrowDown") send("B");
    else if (e.key === "ArrowLeft") send("L");
    else if (e.key === "ArrowRight") send("R");
});
document.addEventListener('keyup', () => send("S"));

function send(cmd) {
    fetch("/command", {
        method: "POST",
        headers: { "Content-Type": "application/x-www-form-urlencoded" },
        body: `cmd=${cmd}&speed=${speed}`
    });
}

function updateSpeed(val) {
    speed = val;
    document.getElementById('speedValue').innerText = val;
}
</script>

</body>
