<body>

    <h1>ü§ñ Robot Control Panel</h1>

    <!-- Control Buttons -->
    <div>
        <button class="button" onclick="sendCommand('F')">‚Üë Forward</button><br>
        <button class="button" onclick="sendCommand('L')">‚Üê Left</button>
        <button class="button" onclick="sendCommand('S')">‚èπ Stop</button>
        <button class="button" onclick="sendCommand('R')">‚Üí Right</button><br>
        <button class="button" onclick="sendCommand('B')">‚Üì Backward</button>
    </div>

    <!-- Speed Slider -->
    <div class="speed-container">
        <label for="speed">Speed: <span id="speedValue">{{ speed }}</span></label><br>
        <input type="range" id="speed" min="0" max="255" value="{{ speed }}" oninput="updateSpeedLabel(this.value)">
    </div>

    <!-- Camera Feeds -->
    <div class="camera-section">
        <div class="camera-view">
            <h3 style="color: red;">üî¥ Front Camera</h3>
            <img src="{{ url_for('video_feed_front') }}" width="640" height="480">
        </div>
        <div class="camera-view">
            <h3 style="color: blue;">üîµ Rear Camera</h3>
            <img src="{{ url_for('video_feed_rear') }}" width="640" height="480">
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        function updateSpeedLabel(val) {
            document.getElementById("speedValue").innerText = val;
        }

        function sendCommand(cmd) {
            const speed = document.getElementById("speed").value;
            fetch("/command", {
                method: "POST",
                headers: {
                    "Content-Type": "application/x-www-form-urlencoded",
                },
                body: `cmd=${cmd}&speed=${speed}`,
            });
        }

        document.addEventListener('keydown', function(e) {
            if (e.key === 'ArrowUp') sendCommand('F');
            if (e.key === 'ArrowDown') sendCommand('B');
            if (e.key === 'ArrowLeft') sendCommand('L');
            if (e.key === 'ArrowRight') sendCommand('R');
        });

        document.addEventListener('keyup', function(e) {
            if (['ArrowUp', 'ArrowDown', 'ArrowLeft', 'ArrowRight'].includes(e.key)) {
                sendCommand('S');
            }
        });
    </script>

</body>
